<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/tab_ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal">

        <com.zhy.weixindemo.ChangeColorIconWithTextView
            android:id="@+id/tab_one"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            zhy:color="#45c01a"
            zhy:icon="@mipmap/ic_menu_start_conversation"
            zhy:text="@string/app_name"
            zhy:textSize="12sp" />

        <com.zhy.weixindemo.ChangeColorIconWithTextView
            android:id="@+id/tab_two"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            zhy:color="#45c01a"
            zhy:icon="@mipmap/ic_menu_friendslist"
            zhy:text="@string/tab_contact"
            zhy:textSize="12sp" />

        <com.zhy.weixindemo.ChangeColorIconWithTextView
            android:id="@+id/tab_three"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            zhy:color="#45c01a"
            zhy:icon="@mipmap/ic_menu_myplaces"
            zhy:text="@string/tab_found"
            zhy:textSize="12sp" />

        <com.zhy.weixindemo.ChangeColorIconWithTextView
            android:id="@+id/tab_four"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            zhy:color="#45c01a"
            zhy:icon="@mipmap/ic_menu_emoticons"
            zhy:text="@string/tab_me"
            zhy:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
